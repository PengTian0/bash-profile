" source ~/.vimrc
let mapleader = ";"
let g:mapleader = ";"
"set clipboard=unnamed

noremap <Leader>q q
noremap q <Nop>
" map redo C-r to r
map <silent> r :red<cr>

" ideavim
" https://plugins.jetbrains.com/plugin/164-ideavim

" acejum
" https://plugins.jetbrains.com/plugin/7086-acejump
"
" Press `f` to activate AceJump
map <leader>f :action AceAction<CR>
" Press `t` to activate Target Mode
map <leader>t :action AceTargetAction<CR>
" Press `l` to activate Line Mode
map <leader>l :action AceLineAction<CR>

nnoremap <C-N> <C-D>

"set clipboard=unnamed
nnoremap <leader>p "+p
vmap <leader>y "+y
vmap <leader>d "+d<cr>

